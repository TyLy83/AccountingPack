@model IEnumerable<AccountingPack.Models.CurrentAsset>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="#" data-url="@Url.Action("Edit","CurrentAsset",new { id = item.Id })"
                       class="btn-item">Edit</a> |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    <a href="#" data-url="@Url.Action("Delete","CurrentAsset",new { id = item.Id })"
                       class="btn-item">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
